# Database
DATABASE_URL="postgresql://user:password@localhost:5432/locus?schema=public"

# Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Geo Configuration
H3_RESOLUTION=10
H3_SMOOTHING_RESOLUTION=9

# Emotion Scoring
HALF_LIFE_DAYS=30
TRUST_MIN=0.5
TRUST_MAX=1.5

# Volatility
VOLATILE_TTL_HOURS_DEFAULT=24
ENABLE_VOLATILITY=true

# Seasonal Features
ENABLE_SEASONAL_RITUALS=true
ENABLE_HIDDEN_CONTENT=true

# Rate Limiting
EMOTION_SUBMISSIONS_PER_HOUR=10
EMOTION_SUBMISSIONS_PER_CELL_PER_DAY=3

# PWA
PWA_OFFLINE_CACHE=true
